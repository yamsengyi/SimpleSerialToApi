<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:SimpleSerialToApi.Views.Controls">
    
    <Style TargetType="{x:Type controls:StatusIndicator}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:StatusIndicator}">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="{TemplateBinding Size}"
                                 Height="{TemplateBinding Size}"
                                 Fill="{TemplateBinding Foreground}"
                                 Stroke="DarkGray"
                                 StrokeThickness="1"
                                 Margin="0,0,5,0"/>
                        <TextBlock Text="{TemplateBinding Status}"
                                   VerticalAlignment="Center"
                                   Visibility="{TemplateBinding ShowText, 
                                       Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>