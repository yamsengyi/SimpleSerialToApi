<Window x:Class="SimpleSerialToApi.Views.ApiMonitorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="API Communication Monitor" 
        SizeToContent="WidthAndHeight"
        MinHeight="400" MinWidth="600" MaxWidth="1000" MaxHeight="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="API Communication Monitor" 
                   FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
        
        <!-- Control Panel -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Clear" Command="{Binding ClearApiMonitorCommand}" 
                    Margin="0,0,10,0" Padding="15,5" MinWidth="80"/>
            <Button Content="Save" Command="{Binding SaveApiMonitorCommand}" 
                    Margin="0,0,15,0" Padding="15,5" MinWidth="80"/>
            <CheckBox Content="Auto Scroll" IsChecked="{Binding ApiMonitorAutoScroll}" 
                      VerticalAlignment="Center" Margin="0,0,20,0"/>
            <CheckBox Content="Show Headers" IsChecked="{Binding ApiShowHeaders}" 
                      VerticalAlignment="Center" Margin="0,0,20,0"/>
            <ComboBox SelectedItem="{Binding ApiMonitorFilter}" 
                      ItemsSource="{Binding ApiMonitorFilters}"
                      MinWidth="120" VerticalAlignment="Center"
                      ToolTip="Filter by status code"/>
            <TextBlock Text="{Binding ApiMonitorStatus}" 
                       VerticalAlignment="Center" Margin="20,0,0,0" 
                       Foreground="Gray" FontSize="11"/>
        </StackPanel>
        
        <!-- Monitor Display -->
        <ScrollViewer Grid.Row="2" Name="ApiMonitorScrollViewer" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Auto">
            <TextBox Name="ApiMonitorTextBox" 
                     Text="{Binding ApiMonitorText}" 
                     IsReadOnly="True"
                     TextWrapping="NoWrap" 
                     FontFamily="Consolas" 
                     FontSize="12"
                     Background="Navy" 
                     Foreground="Cyan"
                     Padding="10"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"/>
        </ScrollViewer>
        
        <!-- Status Bar -->
        <Grid Grid.Row="3" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" Text="Endpoint:" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="1" Text="{Binding ApiEndpointStatus}" 
                       VerticalAlignment="Center" Margin="5,0,0,0" FontWeight="Bold"/>
            <TextBlock Grid.Column="2" Text="Requests:" VerticalAlignment="Center" Margin="20,0,0,0"/>
            <TextBlock Grid.Column="3" Text="{Binding ApiRequestCount}" 
                       VerticalAlignment="Center" Margin="5,0,0,0" FontWeight="Bold"/>
            <TextBlock Grid.Column="4" Text="Success Rate:" VerticalAlignment="Center" Margin="20,0,0,0"/>
            <TextBlock Grid.Column="5" Text="{Binding ApiSuccessRate}" 
                       VerticalAlignment="Center" Margin="5,0,0,0" FontWeight="Bold"/>
        </Grid>
    </Grid>
</Window>
