<Window x:Class="SimpleSerialToApi.Views.SerialMonitorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Serial Communication Monitor" Height="500" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Serial Communication Monitor" 
                   FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
        
        <!-- Control Panel -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Clear" Command="{Binding ClearSerialMonitorCommand}" 
                    Margin="0,0,10,0" Padding="15,5" MinWidth="80"/>
            <Button Content="Save" Command="{Binding SaveSerialMonitorCommand}" 
                    Margin="0,0,15,0" Padding="15,5" MinWidth="80"/>
            <CheckBox Content="Auto Scroll" IsChecked="{Binding SerialMonitorAutoScroll}" 
                      VerticalAlignment="Center" Margin="0,0,20,0"/>
            <CheckBox Content="Show Timestamps" IsChecked="{Binding SerialShowTimestamps}" 
                      VerticalAlignment="Center" Margin="0,0,20,0"/>
            <ComboBox SelectedItem="{Binding SerialMonitorFilter}" 
                      ItemsSource="{Binding SerialMonitorFilters}"
                      MinWidth="100" VerticalAlignment="Center"
                      ToolTip="Filter by message type"/>
            <TextBlock Text="{Binding SerialMonitorStatus}" 
                       VerticalAlignment="Center" Margin="20,0,0,0" 
                       Foreground="Gray" FontSize="11"/>
        </StackPanel>
        
        <!-- Monitor Display -->
        <ScrollViewer Grid.Row="2" Name="SerialMonitorScrollViewer" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Auto">
            <TextBox Name="SerialMonitorTextBox" 
                     Text="{Binding SerialMonitorText}" 
                     IsReadOnly="True"
                     TextWrapping="NoWrap" 
                     FontFamily="Consolas" 
                     FontSize="12"
                     Background="Black" 
                     Foreground="Lime"
                     Padding="10"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"/>
        </ScrollViewer>
        
        <!-- Status Bar -->
        <Grid Grid.Row="3" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" Text="Connected:" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="1" Text="{Binding SerialConnectionStatus}" 
                       VerticalAlignment="Center" Margin="5,0,0,0" FontWeight="Bold"/>
            <TextBlock Grid.Column="2" Text="Messages:" VerticalAlignment="Center" Margin="20,0,0,0"/>
            <TextBlock Grid.Column="3" Text="{Binding SerialMessageCount}" 
                       VerticalAlignment="Center" Margin="5,0,0,0" FontWeight="Bold"/>
        </Grid>
    </Grid>
</Window>
