<Window x:Class="SimpleSerialToApi.Views.ReservedWordsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="지원되는 예약어 목록" 
        Width="700" Height="500"
        MinHeight="400" MinWidth="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="지원되는 예약어 목록" 
                   FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
        
        <!-- Description -->
        <TextBlock Grid.Row="1" TextWrapping="Wrap" Margin="0,0,0,15" FontSize="12" Foreground="DarkBlue">
            <Run Text="예약어는 데이터 전송 시 실제 값으로 자동 치환됩니다. URL이나 데이터 템플릿에서 사용할 수 있습니다."/>
            <LineBreak/>
            <Run Text="예약어 치환은 URL 인코딩 전에 처리되므로 안전하게 사용할 수 있습니다."/>
        </TextBlock>
        
        <!-- Reserved Words List -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <DataGrid Name="ReservedWordsDataGrid" 
                      ItemsSource="{Binding ReservedWords}"
                      AutoGenerateColumns="False" 
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="True"
                      GridLinesVisibility="All"
                      HeadersVisibility="All"
                      RowHeight="30"
                      AlternatingRowBackground="LightGray"
                      MaxHeight="300">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="예약어" Binding="{Binding Word}" Width="180" FontFamily="Consolas"/>
                    <DataGridTextColumn Header="설명" Binding="{Binding Description}" Width="250"/>
                    <DataGridTextColumn Header="예시 값" Binding="{Binding ExampleValue}" Width="150" FontFamily="Consolas"/>
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>
        
        <!-- Usage Examples -->
        <TextBlock Grid.Row="3" TextWrapping="Wrap" Margin="0,15,0,15" FontSize="11" Foreground="DarkGreen">
            <Run Text="사용 예시:" FontWeight="Bold"/>
            <LineBreak/>
            <Run Text="• Full Path Template: http://example.com/api?deviceId=@deviceId&amp;timestamp=@yyyyMMddHHmmss&amp;data={data}"/>
            <LineBreak/>
            <Run Text="• Value Template: @deviceId|@yyyyMMddHHmmssfff|{data}"/>
            <LineBreak/>
            <Run Text="• API Endpoint: /api/data?device=@deviceId&amp;time=@yyyyMMdd"/>
        </TextBlock>
        
        <!-- Footer Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="닫기" IsDefault="True" IsCancel="True" 
                    Click="CloseButton_Click"
                    Padding="20,8" MinWidth="80"/>
        </StackPanel>
        
    </Grid>
</Window>
